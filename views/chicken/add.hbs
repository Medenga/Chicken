<h3>{{viewTitle}}</h3>

<form action="/chicken" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{chicken._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{chicken.name}}">
    </div>
    <div class="form-group">
        <label>Birthday</label>
        <input type="text" class="form-control" name="birthday" placeholder="Birthday" value="{{chicken.birthday}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Weight</label>
            <input type="text" class="form-control" name="weight" placeholder="Weight" value="{{chicken.weight}}">
        </div>
        <div class="form-group col-md-6">
            <label>Step</label>
            <input type="text" class="form-control" name="step" placeholder="Step" value="{{chicken.step}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/chicken/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>